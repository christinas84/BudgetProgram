@model BudgetProgram.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<div class="content" style="margin: 20px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10">
                <div class="card" style="background-color:rgba(0,0,0,0.35)">
                    <div class="header">
                    <h2>@ViewBag.Title.</h2>
                    </div>
                    <div class="content">
                       @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                       {
                        @Html.AntiForgeryToken()
                        <h4>Create a new account.</h4>
                        @*<hr />*@
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label", @style = "color:white;" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label", @style = "color:white;" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label", @style = "color:white;" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.DisplayName, new { @class = "col-md-2 control-label", @style = "color:white;" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label", @style = "color:white;" })
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label", @style = "color:white;" })
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-default" value="Register" />
                            </div>
                        </div>
                       }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




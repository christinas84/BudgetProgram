@model BudgetProgram.Models.Categories



<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title-box">
                    <h3>Delete category</h3>
                </div>
                <ul class="panel-controls" style="margin-top: 2px;">
                    <li><a href="#" class="panel-fullscreen"><span class="fa fa-expand"></span></a></li>
                    @*<li><a href="#" class="panel-refresh"><span class="fa fa-refresh"></span></a></li>*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="fa fa-cog"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span> Collapse</a></li>
                            <li><a href="#" class="panel-remove"><span class="fa fa-times"></span> Remove</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

            <div class="panel-body">

                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <h4>Categories</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.HouseHold.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HouseHold.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                    </dl>

                    @using (Html.BeginForm("Delete", "Categories", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-actions no-color col-md-offset-1 col-md-1">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                    }
                </div>
                <form>
                    <div class="col-md-offset-2 col-md-1">
                        <button class="btn cancel btn-default">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



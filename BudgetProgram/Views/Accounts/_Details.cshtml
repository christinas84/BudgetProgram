@model BudgetProgram.Models.Account

@*@{
    ViewBag.Title = "Details";
}*@

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title-box">
                    <h3>Details</h3>
                </div>
                <ul class="panel-controls" style="margin-top: 2px;">
                    <li><a href="#" class="panel-fullscreen"><span class="fa fa-expand"></span></a></li>
                    @*<li><a href="#" class="panel-refresh"><span class="fa fa-refresh"></span></a></li>*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="fa fa-cog"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span> Collapse</a></li>
                            <li><a href="#" class="panel-remove"><span class="fa fa-times"></span> Remove</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="panel-body">
                @*<div>
                    <h4>@Model.Name Account</h4>
                    <hr />*@
                    <dl class="dl-horizontal">
                        @Html.HiddenFor(model => model.Id)
                        <dt>
                            HouseHold
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HouseHold.Name)
                        </dd>

                        <dt>
                            Account
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Created)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Created.LocalDateTime)
                        </dd>

                        @*<dt>
                            @Html.DisplayNameFor(model => model.Updated)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Updated)
                        </dd>*@

                        <dt>
                            @Html.DisplayNameFor(model => model.Balance)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Balance)
                        </dd>

                    </dl>
                <form>
                    <button class="btn cancelview btn-default">Cancel</button>
                </form>                </div>
            </div>
        </div>
    </div>
@*</div>*@

   @section Scripts {
    <script type="text/javascript">
        $('.cancelview').click(function () {
            $('.detailsView').hide()
        $('.createView').load('/Accounts/_Create/' + $(this).data('id'));
    });
    </script>
}    